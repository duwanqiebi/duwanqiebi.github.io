---
layout: page
description: "一生想做浪漫极客"
---

<ul class="archive-list">
  <div class="archiveslist archive-float clearfix">
    {% for category in site.categories  %}
    <li class="archive-list-item">
    <a class="archive-list-link" href="#{{ category[0] }}">{{ category[0] }}</a>
    <span class="archive-list-count">{{ category[1] | size }}</span>
    </li>
    {% endfor %}
 </div>
</ul>

{% for post in site.posts %}
{% assign item = post %}
{% assign index = true %}
<section class="post {% for category in item.categories %}{{ category }} {% endfor %}" itemscope itemprop="blogPost">

	 <a href="{{ site.baseurl }}{{ item.url }}" title="{{ item.title }}" itemprop="url">
		<time datetime="{{ item.date }}" itemprop="datePublished">{{ item.date | date: "%Y 年 %m 月" }}</time>
		<h1 itemprop="name">{% if item.title %}{{ item.title }}{% else %}&nbsp;{% endif %}</h1>
	 </a>
</section>
{% endfor %}

<script>

$(document).ready(function(){
	alert("1");
    var show_post = function(anchor) {
        $(".post").hide();
        var cls = anchor.substr(1);
        $("." + cls).show();
        $(".archive-folder").text(cls);
    }
    if (document.location.hash) {
        show_post(document.location.hash);
    }
    $('a[href*=#]').click(function() {
        if (this.hash) {
            show_post(this.hash);
        }
    });
    
});

</script>
